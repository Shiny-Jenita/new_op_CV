{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "typeRoots": ["./node_modules/@types", "./src/types"]
,
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
  "**/*.ts",
  "**/*.tsx",
  ".next/types/**/*.ts",
  "next-env.d.ts",
  "src/stores/profileData",
  "build/types/**/*.ts",
  "src/declarations.d.ts"
],
  "exclude": [
    "node_modules"
  ]
}
